{
  "name": "MultimodalChat",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.11",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "PKief.material-icon-theme",
        "saoudrizwan.claude-dev",
        "qwtel.sqlite-viewer"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f pyproject.toml ] && poetry install; echo 'âœ… Packages installed and Requirements met'",
  "postCreateCommand": "pip install poetry && poetry install",
  "postAttachCommand": {
    "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}